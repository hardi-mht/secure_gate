<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    tools:context=".ResetActivity">

    <Button
        android:id="@+id/changemail"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Change Email"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <Button
        android:id="@+id/changepassword"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Change Password"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"/>

    <Button
        android:id="@+id/sendresetmail"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Send REset Email"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"/>

    <Button
        android:id="@+id/removeuser"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Remove user"
        android:textColor="@color/redanger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp" />

    <Button
        android:id="@+id/signout"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Sign me out"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp" />

</RelativeLayout>