<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    tools:context=".ResetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/changemail"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="288dp"
            android:text="Change Email"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/changepassword"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Change Password"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="@+id/changemail"
            app:layout_constraintStart_toStartOf="@+id/changemail"
            app:layout_constraintTop_toBottomOf="@+id/changemail"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/sendresetmail"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Send REset Email"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="@+id/changepassword"
            app:layout_constraintStart_toStartOf="@+id/changepassword"
            app:layout_constraintTop_toBottomOf="@+id/changepassword"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/removeuser"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Remove user"
            android:textColor="@color/redanger"
            app:layout_constraintEnd_toEndOf="@+id/sendresetmail"
            app:layout_constraintStart_toStartOf="@+id/sendresetmail"
            app:layout_constraintTop_toBottomOf="@+id/sendresetmail"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/signout"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Sign me out"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/removeuser"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/removeuser"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/removeuser"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>