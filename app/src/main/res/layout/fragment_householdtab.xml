<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Householdtab"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/currentusercard"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/usr_card">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/currentUserTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_marginStart="25dp"
                        android:layout_toRightOf="@+id/user"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <Button
                    android:id="@+id/sharecurrentuseraddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share my Address"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY FAMILY"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/currentusercard"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp" />

    <HorizontalScrollView
        android:id="@+id/myfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/familycard1"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@drawable/family_card" >

                <ImageView
                    android:id="@+id/familycarduserdp1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maulik Patil"
                    android:textSize="18sp"
                    android:layout_below="@id/familycarduserdp1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true" >

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="1"/>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/familycard2"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/family_card"
                android:layout_toRightOf="@id/familycard1">

                <ImageView
                    android:id="@+id/familycarduserdp2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maulik Patil"
                    android:textSize="18sp"
                    android:layout_below="@id/familycarduserdp2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true" >

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="1"/>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="2"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/familycard3"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/family_card"
                android:layout_toRightOf="@id/familycard2">

                <ImageView
                    android:id="@+id/familycarduserdp3"
                    android:layout_width="40dp"
