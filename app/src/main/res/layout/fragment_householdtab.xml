                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="1"/>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="2"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/familycard4"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/family_card"
                android:layout_toRightOf="@id/familycard3">

                <ImageView
                    android:id="@+id/familycarduserdp4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maulik Patil"
                    android:textSize="18sp"
                    android:layout_below="@id/familycarduserdp4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true" >

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="1"/>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="2"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY GUESTS"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/myfamily"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp" />

    <HorizontalScrollView
        android:id="@+id/myguests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

